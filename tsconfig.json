{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["ESNext"],
        "rootDir": ".",
        "strict": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "experimentalResolver": true
    }
}